<div class="topbar">
    <div class="topbar-left">
        <a href="tel:+420123456789"><span>+420 123 456 789</span></a>

    </div>
    <div class="topbar-right">
        {% if app.user %}
            <a href="">Uživatel: {{ app.user.firstName }} {{ app.user.lastName }}</a>
            <a href="{{ path('app_logout') }}">Odhlásit se</a>
        {% else %}
            <a href="{{ path('app_login') }}">Přihlásit</a>
            <a href="{{ path('app_register') }}">Registrovat</a>
        {% endif %}
    </div>
</div>


<header class="main-header">
    <div class="hrozny">
        <img src="{{ asset('images/design/hrozny.png') }}" alt="hrozny">

    </div>
    <div class=" d-flex justify-content-between align-items-start">

        <img src="{{ asset('images/design/logo.png') }}" alt="Logo" class="logo">

        <nav class="main-nav">
            <ul>
                <li><a href="{{ path('order_new') }}">Objednávky</a></li>
                <li><a href="{#{{ path('reservation/new') }}#}">Rezervace</a></li>
                <li><a href="https://vinoteka-delikatesy.cz/">Náš web</a></li>
            </ul>
        </nav>

        <div class="burger" onclick="toggleMenu()">
            <i class="fa-solid fa-bars"></i>
        </div>
    </div>


</header>
<div class="mobile-menu" id="mobileMenu">
    <div class="d-flex justify-content-end">
        <div class="cross" onclick="toggleMenu()">
            <i class="fa-solid fa-xmark"></i>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center mt-5">
        <ul>
            <li><a href="{{ path('order_new') }}">Objednávky</a></li>
            <li><a href="{#{{ path('reservation/new') }}#}">Rezervace</a></li>
            <li><a href="https://vinoteka-delikatesy.cz/">Náš web</a></li>
        </ul>
    </div>
</div>
<script>
    function toggleMenu() {
        const menu = document.getElementById('mobileMenu');
        if (menu.style.transform === 'translateX(0px)') {
            menu.style.transform = 'translateX(-100%)';
        } else {
            menu.style.transform = 'translateX(0px)';
        }
    }
</script>